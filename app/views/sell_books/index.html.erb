<h1>Search books from class</h1>
<%= search_form_for @q do |f| %>
    <%= f.label :name_start, 'book' %>
    <%= f.search_field :name_start %>
    <%= f.label :prof_name_start, 'professor' %>
    <%= f.search_field :prof_name_start %>
    <%= f.label :class_name_start, 'class_name' %>
    <%= f.search_field :class_name_start %>
    <%# search! %>
    <%= f.submit %>
<% end %>

<table>
    <thead>
      <tr>
        <th><%= sort_link(@q, :name) %></th>
        <th><%= sort_link(@q, :prof_name_start) %></th>
        <th><%= sort_link(@q, :class_name_start) %></th>
        <th><%= sort_link(@q, :price_start) %></th>
        <th colspan='3'></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.prof_name %></td>
          <td><%= book.class_name %></td>
          <td><%= book.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>