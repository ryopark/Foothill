<%= form_for @book do |f| %>

  <div class='field'>
    <%= f.label :name, 'book name' %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :class_name, 'class name' %>
    <%= f.text_field :class_name %>
  </div>

  <div class='field'>
    <%= f.label :prof_name, 'prof name' %>
    <%= f.text_field :prof_name %>
  </div>

  <div class='field'>
    <%= f.label :price, 'price' %>
    <%= f.number_field :price %>
  </div>

  <div class='field'>
    <%= f.label :deanza_flag, 'de anza' %>
    <%= f.check_box :deanza_flag %>
  </div>

  <div class='field'>
    <%= f.label :foothill_flag, 'foothill' %>
    <%= f.check_box :foothill_flag %>
  </div>

  <div class='field'>
    <%= f.fields_for :photos do |p|%>
      <%= p.label :image, 'picture of a book' %>
      <%= p.file_field :image %>
    <% end %>
  </div>

  <div class='actions'>
    <%= f.submit 'submit' %>
  </div>
<% end %>
