<div class='book'>
  <div class='image'>
    <center><%= image_tag @book.photos.first.image.url, class: 'img-responsive' %></center>
  </div>

  <dl>
    <dt>BookName:</dt>
    <dd>
      <%= @book.name %>
    </dd>
  </dl>

  <dl>
    <dt>Description:</dt>
    <dd>
      <%= @book.description %>
    </dd>
  </dl>

  <dl>
    <dt>ProfessorName:</dt>
    <dd>
      <%= @book.prof_name %>
    </dd>
  </dl>

  <dl>
    <dt>ClassName:</dt>
    <dd>
      <%= @book.class_name %>
    </dd>
  </dl>

  <dl>
    <dt>Price:</dt>
    <dd>
      $<%= @book.price %>
    </dd>
  </dl>

  <dl>
    <dt>College:</dt>
    <dd>
      <% if @book.deanza_flag %>
        Deanza
      <% end %>
      <% if @book.foothill_flag %>
        Foothill
      <% end %>
    </dd>
  </dl>
</div>

<ul class='comment_list'>
  <% @sell_book_comments.each do |comment| %>
    <li>
      <%= comment.user.name %>
      <%= comment.body %>
    </li>
  <% end %>
</ul>

<div class='footer text-center'>
  <%= form_for @sell_book_comment, url: sell_book_comments_path(sell_book_id: @book.id) do |f| %>
    <%= f.text_field :body, placeholder: 'Enter comment' %>
    <%= f.submit 'Post', class: 'btn btn-default' %>
  <% end %>
</div>
