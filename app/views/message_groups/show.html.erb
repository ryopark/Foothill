<% if @message_group.messages.present? %>
  <ul class='message_list'>
    <% @message_group.messages.each do |message| %>
      <li>
        <%= image_tag message.user.photo.image(:thumb), class: 'user_image' %>
        <span class='user_name'>
          <%= message.user.name %>
        </span>
        <div class='message_body'>
          <%= message.body %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class='nomessage text-center'>
    Contact messages<br>
    to exchange textbook!
  </div>
<% end %>

<div class='message_footer navbar-fixed-bottom'>
  <%= form_for @message, url: messages_path(message_group_id: @message_group.id) do |f| %>
    <div class='body col-xs-9 col-sm-10 col-md-10 col-lg-10'>
      <%= f.text_area :body, placeholder: 'Enter comment', class: 'form-control' %>
    </div>
    <div class='submit'>
      <%= f.submit 'Send', class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
