<h1>Search books from class</h1>
<%= search_form_for @q do |f| %>
    <%= f.label :name_start, "class" %>
    <%= f.search_field :name_start %>
    <%= f.label :prof_name_start, "professor" %>
    <%= f.search_field :prof_name_start %>
    <%= f.label :book_name_start, "book_name" %>
    <%= f.search_field :book_name_start %>
    <%# search! %>
    <%= f.submit %>
<% end %>

<table>
    <thead>
      <tr>
        <th><%= sort_link(@q, :name) %></th>
        <th><%= sort_link(@q, :prof_name_start) %></th>
        <th><%= sort_link(@q, :book_name_start) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td><%= lesson.name %></td>
          <td><%= lesson.prof_name %></td>
          <td><%= lesson.book_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>